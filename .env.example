# 皓月后端环境变量配置示例

# MongoDB连接字符串 (Docker开发环境)
MONGODB_URI=mongodb://admin:password@mongodb:27017/haoyue?authSource=admin

# JWT密钥
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Alpha Vantage API密钥 (用于获取真实股票数据)
# 申请地址: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=YOUR_ALPHA_VANTAGE_API_KEY_HERE

# Finnhub API密钥 (可选，用于获取额外的股票数据)
# 申请地址: https://finnhub.io/dashboard
FINNHUB_API_KEY=YOUR_FINNHUB_API_KEY_HERE

# 应用配置
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# CORS配置
CORS_ORIGIN=http://localhost:3000,http://frontend:3000

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# 其他配置
APP_VERSION=1.0.0